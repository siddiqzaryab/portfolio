---
const { title = "Sid | ipysid", description = "Backend dev and ML curious. Perpetual learner. Occasionally burns things in the kitchen." } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width,initial-scale=1" />
    <title>{title}</title>
    <meta name="description" content={description} />

    <!-- Open Graph -->
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:type" content="website" />
    <meta property="og:url" content={Astro.url.href} />

    <!-- Favicon (uses GitHub avatar as a fallback — swap for your own .ico if you have one) -->
    <link rel="icon" type="image/png" href="https://github.com/siddiqzaryab.png?size=32" />
  </head>
  <body>
    <div class="cursor-glow" id="cursorGlow"></div>
    <header class="wrap">
      <div class="top">
        <a class="brand" href="/" aria-label="ipysid — home">ipysid.</a>
        <nav class="nav" aria-label="Main navigation">
          <a class={Astro.url.pathname === "/blog" ? "active" : ""} href="/blog">Blog</a>
          <a class={Astro.url.pathname === "/projects" ? "active" : ""} href="/projects">Projects</a>
          <a href="/#about">About</a>
        </nav>
      </div>
    </header>

    <main class="wrap">
      <slot />
    </main>

    <footer class="wrap foot">
      <span>© {new Date().getFullYear()} ipysid</span>
      <a href="mailto:ipysid@gmail.com" class="footer-link">Email</a>
    </footer>
    <script>
      (function () {
        // Skip on touch devices
        if (window.matchMedia("(hover: none)").matches) return;

        const glowEl = document.getElementById("cursorGlow");
        if (!glowEl) return;
        const glow: HTMLElement = glowEl;
        let targetX = -200, targetY = -200;
        let currentX = -200, currentY = -200;

        document.addEventListener("mousemove", (e) => {
          targetX = e.clientX;
          targetY = e.clientY;
        });

        function animate() {
          // Lerp — smooth trailing
          currentX += (targetX - currentX) * 0.12;
          currentY += (targetY - currentY) * 0.12;

          glow.style.transform = `translate(${currentX}px, ${currentY}px)`;
          requestAnimationFrame(animate);
        }
        animate();
      })();
    </script>
  </body>
</html>

<style>
  :global(:root) {
    color-scheme: light dark;

    --bg: #fafbfc;
    --text: #0a0a0a;
    --muted: #64748b;
    --border: #e2e8f0;
    --card: #ffffff;
    --card-hover: #f1f5f9;
    --accent: #3b82f6;
  }

  /* Dark mode via system preference */
  @media (prefers-color-scheme: dark) {
    :global(:root) {
      --bg: #0a0b0f;
      --text: #f1f5f9;
      --muted: #94a3b8;
      --border: #1e293b;
      --card: #0f1419;
      --card-hover: #151a21;
      --accent: #60a5fa;
    }
  }

  :global(html) {
    scroll-behavior: smooth;
  }

  :global(body) {
    margin: 0;
    font-family: ui-sans-serif, system-ui, -apple-system, Segoe UI, Roboto, Helvetica, Arial,
      "Apple Color Emoji", "Segoe UI Emoji";
    background: var(--bg);
    color: var(--text);
    letter-spacing: -0.01em;
    line-height: 1.5;
    -webkit-font-smoothing: antialiased;
    -moz-osx-font-smoothing: grayscale;
  }

  :global(.cursor-glow) {
    position: fixed;
    top: -250px;
    left: -250px;
    width: 500px;
    height: 500px;
    border-radius: 50%;
    background: radial-gradient(circle, rgba(59, 130, 246, 0.06) 0%, transparent 70%);
    pointer-events: none;
    z-index: 9999;
    will-change: transform;
  }

  @media (prefers-color-scheme: dark) {
    :global(.cursor-glow) {
      background: radial-gradient(circle, rgba(96, 165, 250, 0.05) 0%, transparent 70%);
    }
  }

  :global(p) {
    margin: 0;
    line-height: 1.6;
  }

  :global(a) {
    color: inherit;
    text-decoration: none;
  }

  .wrap {
    max-width: 800px;
    margin: 0 auto;
    padding: 32px 24px;
  }

  .top {
    display: flex;
    align-items: baseline;
    justify-content: space-between;
    gap: 16px;
    padding-bottom: 20px;
    border-bottom: 1px solid var(--border);
  }

  .brand {
    font-weight: 700;
    font-size: 18px;
    letter-spacing: -0.02em;
    transition: opacity 150ms ease;
  }

  .brand:hover {
    opacity: 0.7;
  }

  .nav {
    display: flex;
    gap: 20px;
    font-size: 14px;
    color: var(--muted);
    font-weight: 500;
  }

  .nav a {
    position: relative;
    transition: color 150ms ease;
  }

  .nav a::after {
    content: "";
    position: absolute;
    bottom: -4px;
    left: 0;
    right: 0;
    height: 2px;
    background: var(--text);
    border-radius: 2px;
    transform: scaleX(0);
    transition: transform 200ms cubic-bezier(0.4, 0, 0.2, 1);
  }

  .nav a:hover {
    color: var(--text);
  }

  .nav a:hover::after {
    transform: scaleX(1);
  }

  .nav a.active {
    color: var(--text);
  }

  .nav a.active::after {
    transform: scaleX(1);
  }

  .foot {
    display: flex;
    justify-content: space-between;
    align-items: center;
    gap: 16px;
    border-top: 1px solid var(--border);
    color: var(--muted);
    font-size: 14px;
    padding-top: 24px;
    margin-top: 80px;
  }

  .footer-link {
    font-weight: 500;
    transition: color 150ms ease;
  }

  .footer-link:hover {
    color: var(--text);
  }

  @media (max-width: 640px) {
    .wrap {
      padding: 24px 20px;
    }

    .top {
      padding-bottom: 16px;
    }

    .nav {
      gap: 16px;
    }

    .foot {
      margin-top: 64px;
      padding-top: 20px;
    }
  }
</style>