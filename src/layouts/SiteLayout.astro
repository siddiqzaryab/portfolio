---
const { title = "Your Name", description = "Minimal portfolio + blog." } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width,initial-scale=1" />
    <title>{title}</title>
    <meta name="description" content={description} />
  </head>
  <body>
    <header class="wrap">
      <div class="top">
        <a class="brand" href="/">Sid</a>
        <nav class="nav">
          <a class={Astro.url.pathname === "/blog" ? "active" : ""} href="/blog">Blog</a>
          <a href="/#projects">Projects</a>
          <a href="/#about">About</a>
        </nav>

      </div>
    </header>

    <main class="wrap">
      <slot />
    </main>

    <footer class="wrap foot">
      <span>Â© {new Date().getFullYear()} Sid</span>
      <a href="mailto:ipysid@gmail.com">Email</a>
    </footer>
  </body>
</html>

<style>
  :global(:root) {
    color-scheme: light;
    --text: #0a0a0a;
    --muted: #666;
    --border: #eaeaea;
    --bg: #fafafa;

  }

  :global(body) {
    margin: 0;
    font-family: ui-sans-serif, system-ui, -apple-system, Segoe UI, Roboto, Helvetica, Arial, "Apple Color Emoji",
      "Segoe UI Emoji";
    background: var(--bg);
    color: var(--text);
    letter-spacing: -0.01em;
  }

  a {
    color: inherit;
    text-decoration: none;
  }
  
  .nav a.active {
    color: var(--text);
  }


  .wrap {
    max-width: 840px;
    margin: 0 auto;
    padding: 24px;
  }


  .top {
    display: flex;
    align-items: baseline;
    justify-content: space-between;
    gap: 16px;
    padding-bottom: 16px;
    border-bottom: 1px solid var(--border);
  }

  .brand {
    font-weight: 600;
  }

  .nav {
    display: flex;
    gap: 14px;
    font-size: 14px;
    color: var(--muted);
  }

  .nav a:hover {
    color: var(--text);
  }

  .foot {
    display: flex;
    justify-content: space-between;
    gap: 16px;
    border-top: 1px solid var(--border);
    color: var(--muted);
    font-size: 14px;
    padding-top: 16px;
    margin-top: 56px;
  }
</style>
