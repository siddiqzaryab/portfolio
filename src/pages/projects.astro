---
import SiteLayout from "../layouts/SiteLayout.astro";

const projects = [
  {
    title: "Project One",
    desc: "One-line description of what it does and why it matters.",
    href: "https://example.com",
    repo: "https://github.com/siddiqzaryab/project-one",
    tags: ["TypeScript", "Web"],
  },
  {
    title: "Project Two",
    desc: "Another strong one-liner. Keep it simple.",
    href: "https://example.com",
    repo: "https://github.com/siddiqzaryab/project-two",
    tags: ["APIs", "UI"],
  },
  {
    title: "Project Three",
    desc: "Short description of the project and its impact.",
    href: "https://example.com",
    repo: "https://github.com/siddiqzaryab/project-three",
    tags: ["Python", "ML"],
  },
  {
    title: "Project Four",
    desc: "What it does, why you built it, who it's for.",
    href: "https://example.com",
    repo: "https://github.com/siddiqzaryab/project-four",
    tags: ["React", "Node"],
  },
];
---

<SiteLayout title="Projects — ipysid" description="Things I built. Some even work.">
  <div class="header">
    <h1>Projects</h1>
    <p class="sub">Things I built. Some even work.</p>
  </div>

  <div class="project-grid">
    {projects.map((p) => (
      <div class="pcard">
        <div class="pcard-head">
          <div class="t">{p.title}</div>
          <div class="actions">
            {p.repo && (
              <a class="action" href={p.repo} target="_blank" rel="noreferrer" aria-label={`${p.title} source code on GitHub`}>
                <svg width="14" height="14" viewBox="0 0 24 24" fill="currentColor" aria-hidden="true"><path d="M12 0C5.37 0 0 5.37 0 12c0 5.3 3.438 9.8 8.205 11.385.6.113.82-.258.82-.577 0-.285-.01-1.04-.015-2.04-3.338.724-4.042-1.61-4.042-1.61-.546-1.385-1.335-1.755-1.335-1.755-1.087-.744.084-.729.084-.729 1.205.084 1.838 1.236 1.838 1.236 1.07 1.835 2.809 1.305 3.495.998.108-.776.417-1.305.76-1.605-2.665-.3-5.466-1.332-5.466-5.93 0-1.31.465-2.38 1.235-3.22-.135-.303-.54-1.523.105-3.176 0 0 1.005-.322 3.3 1.23.96-.267 1.98-.399 3-.405 1.02.006 2.04.138 3 .405 2.28-1.552 3.285-1.23 3.285-1.23.645 1.653.24 2.873.12 3.176.765.84 1.23 1.91 1.23 3.22 0 4.61-2.805 5.625-5.475 5.92.42.36.81 1.096.81 2.22 0 1.606-.015 2.896-.015 3.286 0 .315.21.69.825.57C20.565 21.795 24 17.295 24 12c0-6.63-5.37-12-12-12z"/></svg>
                Source
              </a>
            )}
            {p.href && (
              <a class="action action--primary" href={p.href} target="_blank" rel="noreferrer" aria-label={`Visit ${p.title}`}>
                Live ↗
              </a>
            )}
          </div>
        </div>
        <div class="d">{p.desc}</div>
        <div class="tags">
          {p.tags.map((t) => <span class="tag">{t}</span>)}
        </div>
      </div>
    ))}
  </div>
</SiteLayout>

<style>
  .header {
    padding-top: 28px;
  }

  h1 {
    margin: 0;
    font-size: 36px;
    line-height: 1.1;
    letter-spacing: -0.03em;
    font-weight: 700;
  }

  .sub {
    margin: 10px 0 0;
    color: var(--muted);
    line-height: 1.6;
  }

  .project-grid {
    margin-top: 28px;
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 12px;
  }

  .pcard {
    border: 1px solid var(--border);
    border-radius: 18px;
    padding: 18px;
    background: var(--card);
    display: flex;
    flex-direction: column;
    gap: 10px;
    transition: border-color 150ms ease, background 150ms ease, transform 150ms ease;
  }

  .pcard:hover {
    border-color: var(--accent);
    background: var(--card-hover);
    transform: translateY(-1px);
  }

  .pcard-head {
    display: flex;
    align-items: flex-start;
    justify-content: space-between;
    gap: 8px;
  }

  .pcard .d {
    flex-grow: 1;
  }

  .pcard .tags {
    margin-top: auto;
  }

  .t {
    font-weight: 600;
    font-size: 16px;
  }

  .actions {
    display: flex;
    gap: 8px;
    flex-shrink: 0;
  }

  .action {
    display: inline-flex;
    align-items: center;
    gap: 5px;
    font-size: 13px;
    font-weight: 500;
    color: var(--muted);
    border: 1px solid var(--border);
    border-radius: 999px;
    padding: 4px 10px;
    transition: color 150ms ease, border-color 150ms ease, background 150ms ease;
  }

  .action:hover {
    color: var(--text);
    border-color: var(--text);
  }

  .action--primary {
    color: var(--accent);
    border-color: var(--accent);
  }

  .action--primary:hover {
    background: var(--accent);
    color: #fff;
  }

  .d {
    color: var(--muted);
    font-size: 14px;
    line-height: 1.6;
    margin-top: 10px;
  }

  .tags {
    margin-top: 12px;
    display: flex;
    gap: 8px;
    flex-wrap: wrap;
  }

  .tag {
    border: 1px solid var(--border);
    border-radius: 999px;
    padding: 3px 8px;
    font-size: 12px;
    color: var(--muted);
  }

  @media (max-width: 480px) {
    .project-grid {
      grid-template-columns: 1fr;
    }
  }
</style>