---
import SiteLayout from "../../layouts/SiteLayout.astro";
import { getCollection } from "astro:content";

export async function getStaticPaths() {
  const posts = await getCollection("blog");
  return posts.map((post) => ({
    params: { slug: post.slug },
    props: { post },
  }));
}

const { post } = Astro.props;
const { Content } = await post.render();
---

<SiteLayout title={`${post.data.title} — ipysid`} description={post.data.excerpt ?? "A blog post by Sid."}>
  <article class="article">
    <a class="back" href="/blog">← Back to blog</a>

    <div class="header">
      <h1>{post.data.title}</h1>
      <div class="meta">
        {post.data.date.toLocaleDateString("en-GB", {
          year: "numeric",
          month: "short",
          day: "2-digit",
        })}
      </div>

      {post.data.tags?.length ? (
        <div class="tags">
          {post.data.tags.map((t) => <span class="tag">{t}</span>)}
        </div>
      ) : null}
    </div>

    <div class="prose">
      <Content />
    </div>
  </article>
</SiteLayout>

<style>
  .article {
    padding-top: 28px;
  }

  .back {
    display: inline-flex;
    align-items: center;
    font-size: 14px;
    color: var(--muted);
    transition: color 150ms ease;
  }

  .back:hover {
    color: var(--text);
  }

  .header {
    margin-top: 24px;
  }

  h1 {
    margin: 0;
    font-size: 36px;
    line-height: 1.1;
    letter-spacing: -0.03em;
    font-weight: 700;
  }

  .meta {
    margin-top: 10px;
    color: var(--muted);
    font-size: 12px;
  }

  .tags {
    margin-top: 12px;
    display: flex;
    gap: 8px;
    flex-wrap: wrap;
  }

  .tag {
    border: 1px solid var(--border);
    border-radius: 999px;
    padding: 3px 8px;
    font-size: 12px;
    color: var(--muted);
  }

  /* Prose */
  .prose {
    margin-top: 32px;
  }

  .prose :global(p) {
    line-height: 1.8;
    margin: 16px 0;
    color: var(--text);
    font-size: 15px;
  }

  .prose :global(h2) {
    margin: 32px 0 10px;
    font-size: 22px;
    font-weight: 700;
    letter-spacing: -0.02em;
    color: var(--text);
  }

  .prose :global(h3) {
    margin: 24px 0 8px;
    font-size: 18px;
    font-weight: 600;
    color: var(--text);
  }

  .prose :global(ul),
  .prose :global(ol) {
    margin: 16px 0;
    padding-left: 22px;
    line-height: 1.8;
    color: var(--text);
    font-size: 15px;
  }

  .prose :global(a) {
    color: var(--accent);
    text-decoration: underline;
    text-underline-offset: 3px;
    transition: opacity 150ms ease;
  }

  .prose :global(a):hover {
    opacity: 0.7;
  }

  .prose :global(code) {
    background: var(--card-hover);
    border: 1px solid var(--border);
    color: var(--text);
    padding: 2px 6px;
    border-radius: 6px;
    font-size: 13px;
  }

  .prose :global(pre) {
    background: var(--card-hover);
    border: 1px solid var(--border);
    padding: 16px;
    border-radius: 12px;
    overflow-x: auto;
    margin: 16px 0;
  }

  .prose :global(pre code) {
    background: none;
    border: none;
    padding: 0;
    font-size: 13px;
    color: var(--text);
  }

  .prose :global(blockquote) {
    border-left: 3px solid var(--accent);
    margin: 20px 0;
    padding: 4px 16px;
    color: var(--muted);
    font-style: italic;
  }

  .prose :global(hr) {
    border: none;
    border-top: 1px solid var(--border);
    margin: 32px 0;
  }
</style>