---
import SiteLayout from "../../layouts/SiteLayout.astro";
import { getCollection } from "astro:content";

const posts = (await getCollection("blog")).sort(
  (a, b) => b.data.date.getTime() - a.data.date.getTime()
);
---

<SiteLayout title="Blog — ipysid" description="Thoughts from someone who Googles everything.">
  <div class="header">
    <h1>Blog</h1>
    <p class="sub">Thoughts from someone who Googles everything.</p>
  </div>

  <ul class="cards">
    {posts.map((post) => (
      <li>
        <a
          class="card"
          href={`/blog/${post.slug}`}
          aria-label={`${post.data.title} — blog post`}
        >
          <div class="row">
            <div>
              <div class="t">{post.data.title}</div>
              {post.data.excerpt && (
                <div class="d">{post.data.excerpt}</div>
              )}
              <div class="meta">
                {post.data.date.toLocaleDateString("en-GB", {
                  year: "numeric",
                  month: "short",
                  day: "2-digit",
                })}
              </div>
            </div>
            <span class="arrow" aria-hidden="true">→</span>
          </div>
        </a>
      </li>
    ))}
  </ul>
</SiteLayout>

<style>
  .header {
    padding-top: 28px;
  }

  h1 {
    margin: 0;
    font-size: 36px;
    line-height: 1.1;
    letter-spacing: -0.03em;
    font-weight: 700;
  }

  .sub {
    margin: 10px 0 0;
    color: var(--muted);
    line-height: 1.6;
  }

  .cards {
    list-style: none;
    padding: 0;
    margin: 28px 0 0;
    display: grid;
    gap: 12px;
  }

  .card {
    display: block;
    border: 1px solid var(--border);
    border-radius: 14px;
    padding: 14px;
    background: var(--card);
    transition: border-color 150ms ease, background 150ms ease, transform 150ms ease;
  }

  .card:hover {
    border-color: var(--accent);
    background: var(--card-hover);
    transform: translateY(-1px);
  }

  .row {
    display: flex;
    align-items: flex-start;
    justify-content: space-between;
    gap: 12px;
  }

  .t {
    font-weight: 600;
    margin-bottom: 6px;
  }

  .d {
    color: var(--muted);
    font-size: 14px;
    line-height: 1.6;
  }

  .meta {
    margin-top: 10px;
    color: var(--muted);
    font-size: 12px;
  }

  .arrow {
    color: var(--muted);
    transition: color 150ms ease, transform 150ms ease;
  }

  .card:hover .arrow {
    color: var(--accent);
    transform: translateX(3px);
  }
</style>